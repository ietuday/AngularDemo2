@import '../../styles.scss';

// Applying changes to inputText
.ui-inputtext {
  width: 100% !important;
  font-size: 12px !important;
  padding: 5px !important;
  color: #222 !important;
}

//Applying 100% width to dropdown widget
.ui-dropdown {
  width: 100%;
}

.customerPopUp .ui-dialog-titlebar {
    // padding: 1em 1.5em;
    // margin-left: 3px;
    // margin-right: -20px;
    //
    border-bottom: 1px solid $egrayborder;
    background: $ewhite 0 0 repeat-x;
    color: #212121;
}

.customerPopUp .ui-dialog .ui-dialog-titlebar-close span {
    display: block;
    margin: 0;
    color: white;
}

 .customerTextBox1 .ui-dropdown .ui-dropdown-trigger .fa {
    margin-top: 6px;
}

.customerPopUp .ui-dialog.ui-widget .ui-dialog-titlebar {
     padding:4px 5px;
}

//Applying font-size to dropdown items
.ui-dropdown-panel .ui-dropdown-item {
    font-size: 12px;
}

// Applying background color if input is disabled
input[type="text"]:disabled {
  // background-color: $egrayfield;
  background-color: $egraydisabledfield;
  // border: 1px solid $egrayborder;
  border: 1px solid $egraydisabledborder;
  color: black;
}

// Reducing font-size of select button
.ui-selectbutton .ui-button.ui-state-active {
    font-size: 11px;
}
.ui-selectbutton .ui-button.ui-state-default {
    font-size: 11px;
}

//Adjusting trigger of dropdown
.ui-dropdown .ui-dropdown-trigger .fa {
    margin-top: .2em;
}

// Changing hover color for buttons.
.ui-button:enabled:hover, .ui-widget-content .ui-button:enabled:hover {
    border: 1px solid $emaroon;
    background: $emaroon;
    outline: 0 none;
    color: #fff;
}

.spinnerBlock .ui-button, .spinnerBlock button.ui-button.ui-state-default, .spinnerBlock .ui-button.ui-state-default{
    background: $ewhite;
    color: #555555;
    border: 1px solid #d6d6d6;
    padding: 3px !important;
}

.applyButtonStyle .ui-button, .applyButtonStyle button.ui-button.ui-state-default, .applyButtonStyle .ui-button.ui-state-default{
    background: $ewhite;
    color: $emaroon;
    border: 1px solid $emaroon;
    border-radius: 25px;
    padding: 2px !important;
}

