@import '../../styles.scss';

//Removing margins between the tabs!!
.ui-tabview .ui-tabview-nav li {
    margin: 0px !important;
}

//Maroon color of label when tab active
.ui-state-active a, .ui-state-active a:link, .ui-state-active a:visited {
    color: $emaroon;
    text-decoration: none;
}

// Removing side padding of tab-view body
.ui-tabview.ui-tabview-top>.ui-tabview-nav {
    padding: 0px;
}
.ui-tabview {
    padding: 0px;
}

// Removing padding of tab-content
.ui-tabview .ui-tabview-panel {
    padding: 0px;
}

// Reducing side padding of header
.ui-tabview .ui-tabview-nav li a {
    float: left;
    padding: .4em .4em;
    text-decoration: none;
}

// .ui-tabview.ui-tabview-top>.ui-tabview-nav li {
//     border-bottom: 0;
//     top: 1px;
// }

.ui-dialog {
    overflow-y: auto;
}

.changeBtnStyle .ui-button, .changeBtnStyle button.ui-button.ui-state-default, .changeBtnStyle .ui-button.ui-state-default{
  background: $ewhite;
    color: $emaroon;
    border: 1px solid $emaroon;
    font-size: 13.5px;
    padding-top: 3.5px;
    padding-bottom: 3.5px;
    border-radius: 25px;
}

// Changing hover color for buttons.
.changeBtnStyle .ui-button:enabled:hover, .changeBtnStyle .ui-widget-content .ui-button:enabled:hover {
    border: 1px solid $emaroon;
    background: $emaroon;
    outline: 0 none;
    color: #fff;
}

.dashboardOverlayData .ui-overlaypanel-content {
    padding: .5em 1em;
}

.dashboardOverlayData .ui-overlaypanel {
    padding: 0;
    margin: 0;
    width: 127px;
    height: auto;
    margin-top: 8px;
    position: absolute;
}
.dashboardDialog .ui-dialog.ui-dialog-titlebar {
    padding: 1em 1.5em;
    margin-left: 3px;
    margin-right: -20px;

    border-bottom: 1px solid $egrayborder;
    background: $ewhite 0 0 repeat-x;
    color: #212121;
}

.subOverlayBlank {
    height: 24px;
    margin-left: -8px;
    font-size: 10px;
    color: #5f5f5f;
    letter-spacing: 0.4px;
    cursor: pointer;
}

.daschBoardIcon {
    width: 10px;
    height: 10px;
    border-width: 1px;
    border-style: solid;
    margin-top: -13px;
    background-color: white;
    border-bottom: 1px solid white;
    border-color: transparent #D5D5D5 #D5D5D5 transparent;
    -webkit-transform: rotate(45deg);
    transform: rotate(225deg);
}

.overlayLableDiv {
    width: 80%;
    padding-top: 5px;
    /* margin-top: 5px; */
    height: 12px;
}

.dashboardBody {
